@model AgenciaComBack.Models.Destino

@{
    ViewData["Title"] = "Delete";
}

<main>
    <div class="contato">
        <div class="col-sm-7">
            <div class="modal-content">
                <h1 class="alert-danger">Deletar</h1>
                <h3>Tem certeza que deseja deletar?</h3>
                <div>
                    <h4>Destino</h4>
                    <hr />
                    <div class="modal-header">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.NomeDestino)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.NomeDestino)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Date)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdDestino" />
                            <input type="submit" value="Deletar" class="btn btn-danger" /> <br /><br />
                            <a asp-action="Index" class="btn btn-primary">Ver Lista</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>